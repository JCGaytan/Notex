<Window x:Class="Notex.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="260" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Airtable API Token" FontWeight="Bold" />
            <PasswordBox x:Name="ApiKeyBox" PasswordChanged="OnPasswordChanged" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Base Id (optional)" FontWeight="Bold" />
            <TextBox Text="{Binding BaseId, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Leave blank to let Notex choose or create." Foreground="#777" FontSize="12" />
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" Foreground="#66cc66" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Cancel" Width="80" IsCancel="True" />
            <Button Content="Save" Width="100" IsDefault="True" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
